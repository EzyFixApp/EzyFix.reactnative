{
  "expo": {
    "name": "EzyFix",
    "slug": "EzyFixMobile",
    "version": "1.0.0",
    "scheme": "EzyFix",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/logononame.png",
          "color": "#6366F1",
          "androidMode": "default",
          "androidCollapsedTitle": "EzyFix"
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location when open and in the background."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Cho phép EzyFix truy cập thư viện ảnh để chọn ảnh",
          "cameraPermission": "Cho phép EzyFix truy cập camera để chụp ảnh"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/logononame.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cho phép EzyFix truy cập camera để chụp ảnh",
        "NSPhotoLibraryUsageDescription": "Cho phép EzyFix truy cập thư viện ảnh để chọn ảnh",
        "NSPhotoLibraryAddUsageDescription": "Cho phép EzyFix lưu ảnh vào thư viện",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "site.ezyfix.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logononame.png",
        "backgroundColor": "#ffffff"
      },
      "notification": {
        "icon": "./assets/logononame.png",
        "color": "#6366F1"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "com.google.android.c2dm.permission.RECEIVE",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM"
      ],
      "useNextNotificationsApi": true,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=site.ezyfix.app"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d86dfbc6-fade-48fc-8b85-184c84f1c0b4"
      }
    }
  }
}
