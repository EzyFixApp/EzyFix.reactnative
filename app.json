{
  "expo": {
    "name": "EzyFixMobile",
    "slug": "EzyFixMobile",
    "version": "1.0.0",
    "scheme": "EzyFixMobile",
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-dev-launcher",
        {
          "launchMode": "most-recent"
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to location when open and in the background."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Cho phép EzyFix truy cập thư viện ảnh để chọn ảnh",
          "cameraPermission": "Cho phép EzyFix truy cập camera để chụp ảnh"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cho phép EzyFix truy cập camera để chụp ảnh",
        "NSPhotoLibraryUsageDescription": "Cho phép EzyFix truy cập thư viện ảnh để chọn ảnh",
        "NSPhotoLibraryAddUsageDescription": "Cho phép EzyFix lưu ảnh vào thư viện"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    }
  }
}
